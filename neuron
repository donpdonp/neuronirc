#!/usr/bin/env ruby
require 'bluepill'
require 'redis'
require 'yaml'

SETTINGS = YAML.load(File.open("settings.yaml"))
BASE_DIR = File.expand_path(File.dirname(__FILE__))


def help
  puts "#{File.basename(__FILE__)} usage: [command] [options...]"
  puts "'start'"
  puts "'stop'"
  puts "'join #<channel>'"
  puts "'say #<channel> <msg>'"
  exit
end

help if ARGV.size == 0

bluepill_base_dir = File.join(BASE_DIR,".bluepill")
controller = Bluepill::Controller.new({:base_dir => bluepill_base_dir})
apps = controller.running_applications

if ARGV[0] == 'start'
  if apps.length == 0
    puts "starting bluepilld"
    system("bundle exec bluepill load neuron.pill --no-privileged --base-dir #{bluepill_base_dir}")
  end
  controller.handle_command('neuron', 'start', nil)
end

if ARGV[0] == 'stop'
  if apps.length > 0
    puts "stopping bluepilld"
    controller.handle_command('neuron', 'quit', nil)
  end
end

if ARGV.size == 2
  msg = {"command" => ARGV[0], "message" => ARGV[1]}
end

if ARGV.size == 3
  msg = {"command" => ARGV[0], "target" => ARGV[1], "message" => ARGV[2]}
end

puts msg.inspect
redis.publish :say, msg.to_json

